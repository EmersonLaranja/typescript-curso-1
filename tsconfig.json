{
  "compilerOptions": {
    "outDir": "./build", //Emita todos os arquivos de saída em built
    "esModuleInterop": true, // para resolver o problema de importação
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [ //Leia em qualquer arquivo dentro da pasta src e o arquivo server.ts
    "./src/**/*",
    "./server.ts"
  ],
}